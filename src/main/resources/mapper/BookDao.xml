<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lzl.dao.BookDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="query4books" resultType="Book">
		SELECT
			id,
			name,
			author,
			number
		FROM
			book
	</select>
	
</mapper>